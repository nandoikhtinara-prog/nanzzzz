    <script>
        function showForm() {
            document.getElementById('choice-section').style.display = 'none';
            document.getElementById('form-section').style.display = 'block';
        }
        function showThanks() {
            document.getElementById('choice-section').style.display = 'none';
            document.getElementById('thanks-msg').style.display = 'block';
        }
        function goBack() {
            document.getElementById('form-section').style.display = 'none';
            document.getElementById('thanks-msg').style.display = 'none';
            document.getElementById('choice-section').style.display = 'flex';
        }
        setInterval(() => {
